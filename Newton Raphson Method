/* Newton -Raphson method*/
#include<math.h>
#include<stdio.h>
float f(float x)
{
 return(x*x*x-x-1);
}
 float df(float x)
 {
 return (3*x*x-1);
 }
 int main ()
 {
 float a,b,c,e;
 int k=0;
 printf("\n Enter accuracy e=");
 scanf("%f",&e);
 do
 {
 printf("\n Enter interval a,b ");
 scanf("%f%f",&a,&b);
 }while(f(a)*f(b)>0.0);
 c=(a+b)/2;
 do
 {
 c=c- (f (c)/df(c));
 printf("\n k=%d \t c=%f\t f(c)=%fâ€, k,c,f(c));
 k=k+1;
 }
 while(fabs(f(c))>=e);
 printf("\n\n Root of the Equation is %f\n\n",c);
 printf("\n No. of iterations =%d",k);
 }
